<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/main_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/volley_pic"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/song_name"
                android:layout_toEndOf="@+id/volley_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Song : " />
            <TextView
                android:id="@+id/volley_song"
                android:layout_toEndOf="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"/>
            <TextView
                android:id="@+id/artist_name"
                android:layout_toEndOf="@+id/volley_pic"
                android:layout_below="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Artist : " />
            <TextView
                android:id="@+id/volley_artist"
                android:layout_toEndOf="@+id/artist_name"
                android:layout_below="@+id/volley_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>